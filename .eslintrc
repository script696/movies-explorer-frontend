{
  "env": {
    "browser": true,
    "node": false,
    "mongo": false,
    "es6": true
  },
  "extends": ["airbnb-base"],
  "parserOptions": {
    "ecmaFeatures": {
      "impliedStrict": true
    }
  },
  "plugins": ["sort-keys-fix", "unused-imports"],
  "rules": {
    "no-underscore-dangle": 0,
    "quotes": [2, "double", { "avoidEscape": true }],
    "no-console": 0,
    "import/extensions": [
      0,
      "ignorePackages",
      {
        "js": "never",
        "jsx": "never",
        "ts": "never",
        "tsx": "never"
      }
    ],
    "import/no-unresolved": [0, { "caseSensitive": false }]
  }
}
